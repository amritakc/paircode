<div id="left">

<h1>Welcome <%= @profile.name%></h1>


<h3>PairCoders near you</h3>
<% if @x %>
	<% @x.each do |i| %>
		<% if i.id != session[:user_id] %>
		<p><%= i.id %> - <%= i.alias %></p>
		<p><%= i.email %></p>
		<p>Languages:</p>
		
		<% Ninja.select("*").joins(:user).joins(:language).where("user_id=?", User.find(i.id)).each do |z| %> 
			<%= z.lang_name%>
			<% end %>
		<% end %>
	<% end %>
<% end %>
<br>
<br>
 <form action='/' method='post'>
    <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
    <input type='hidden' name='_method' value='delete'>
    <input type='submit' value='Log Out' class="butts">
  </form>
<br>
  <form action="/users/<%= @profile.id %>" method="post">
	<input name = "authenticity_token" value="<%= form_authenticity_token%>" type ="hidden">
	<input type="hidden" name="_method" value="delete">
	<input type="submit" value="Delete Account" class="butts">
</form>

<br>
<a href="/edit">Edit Profile</a>
</div>
<div id="right">
<h2>Location of PairCoders</h2>
<% if @x %>
<% my_url = "http://maps.google.com/maps/api/staticmap?size=850x600&sensor=false&zoom=12" %>
<% @x.each do |location| %> 
<% my_url += "&markers=|label:#{location.id}|#{location.latitude}%2C#{location.longitude}" %>    
<% end %>
<%= image_tag my_url %>
<%end%>
</div>



